<div class="main-login col-16 clearfix">

  <div class="container login-box">

    <div class="row guest-login">
      <input id="guest-login" class="btn btn-default btn-guest" value="Log In with Guest Credentials" onclick="runguest();" />
    </div>

    <script>
      var runguest = function(){
        $("#username-field").typed({
          strings: ["bugs@bunny.com"],
          typeSpeed: 30,
          attr: 'value'
        });
        $("#password-field").typed({
          strings: ["bugsbunny"],
          typeSpeed: 30,
          attr: 'value'
        });
        $(function(){
            setTimeout(function () {$("#log-in-button").click();}, 1500);
        });
      }
    </script>

    <div class="element"></div>


    <div class="login-errors">
      <% if flash[:errors] %>
        <%= flash[:errors].join("<br>").html_safe %>
      <% end %>
    </div>

    <div class="row">

      <div class="sign-in col-md-offset-2 col-md-4">
        <h1>Already a member?</h1>
        <br>
        <form action="<%= session_url %>" method="post">
          <%= auth_token %>
          <input type="text" id="username-field" class="form-control" name="user[user_name]" placeholder="Email Address" value="<%= @user.user_name %>">
        <br>
          <input type="password" id="password-field" class="form-control" name="user[password]" placeholder="Password" value="">
        <br>
        <input type="submit" id="log-in-button" class="btn btn-default" value="Log In">
      </form>
     </div>

