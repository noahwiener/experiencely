<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <% if flash[:errors] %>
      <%= flash[:errors].join("<br>").html_safe %>
    <% else %>
      <%= "no errors" %>
    <% end %>

    <div class="form-group">

      <h1>Sign Up</h1>

       <form action="<%= users_url %>" method="post">
        <%= auth_token %>
        <label>Username
          <input type="text" class="form-control" name="user[user_name]" value="<%= @user.user_name %>">
        </label>
        <br>
        <label>Password
          <input type="password" class="form-control" name="user[password]" value="">
        </label>

      <br>
      <input type="submit" class="btn btn-default" value="Sign Up">
      </form>

    </div>
    <br><br>

    <div class="form-group">

      <h1>Sign In</h1>

      <form action="<%= session_url %>" method="post">
        <%= auth_token %>
        <label>Username
          <input type="text" class="form-control" name="user[user_name]" value="">
        </label>
        <br>
        <label>Password
          <input type="password" class="form-control" name="user[password]" value="">
        </label>

      <br>
      <input type="submit" class="btn btn-default" value="Sign In">

    </div>
    </form>
  </div>
</div>
